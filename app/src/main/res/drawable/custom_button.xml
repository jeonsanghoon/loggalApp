<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#c5c5c5"/>
            <stroke
                android:width="2dp"
                android:color="#003c69"/>
            <corners
                android:radius="6dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="0"
                android:endColor="#0169b8"
                android:startColor="#0169b8"/>
            <stroke
                android:width="1dp"
                android:color="#003c69"/>
            <corners
                android:radius="7dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>

        </shape>
    </item>
</selector>